{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "turbo run dev --filter=web",
    "dev": "concurrently \"yarn dev:api\" \"yarn dev:web\"",
    "plop": "cross-env NODE_OPTIONS='--import tsx' plop --plopfile=./scripts/plop/index.ts && yarn build:arc",
    "build:arc": "cd ./packages/arc && npm run build && cd ../.."
  },
  "name": "barber",
  "packageManager": "yarn@4.6.0",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.6",
    "esbuild-register": "^3.6.0",
    "plop": "^4.0.1",
    "shared": "*",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4"
  }
}
